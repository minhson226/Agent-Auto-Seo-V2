# Production Environment Variables Template
# Copy this file to .env on the production server at /srv/apps/auto-seo/.env
# This file should NEVER be committed to version control

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=autoseo
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=autoseo

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# =============================================================================
# RabbitMQ Configuration
# =============================================================================
RABBITMQ_USER=autoseo
RABBITMQ_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# =============================================================================
# ClickHouse Configuration (Analytics)
# =============================================================================
CLICKHOUSE_USER=autoseo
CLICKHOUSE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
CLICKHOUSE_DB=autoseo_analytics

# =============================================================================
# MinIO Configuration (S3-compatible storage)
# =============================================================================
MINIO_ROOT_USER=CHANGE_THIS_MINIO_USER
MINIO_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# =============================================================================
# Application Secrets
# =============================================================================
# Generate a secure random key for JWT tokens (at least 32 characters)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS

# Generate exactly 32 bytes for encryption (base64 encoded recommended)
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_BYTE_ENCRYPTION_KEY

# =============================================================================
# External Services (Optional)
# =============================================================================
# OpenAI API for content generation
OPENAI_API_KEY=

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Slack Webhook (for Slack notifications)
SLACK_WEBHOOK_URL=

# =============================================================================
# Docker Image Configuration
# =============================================================================
# This is automatically set by the deployment script
# You can manually override it if needed
IMAGE_TAG=latest

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Generate strong passwords (at least 16 characters, random)
# 2. Use different passwords for each service
# 3. Keep this file secure with permissions: chmod 600 .env
# 4. Never commit this file to version control
# 5. Regularly rotate passwords and keys
# 6. Consider using a secrets manager for production
